# Grafana-Loki Monitoring Stack Configuration
# Copy this file to .env and customize as needed

# Ports
GRAFANA_PORT=7000
LOKI_PORT=7100

# Authentication
GRAFANA_ADMIN_PASSWORD=changeme

# Memory Configuration (Realistic for 16-32GB systems)
# Monitoring stack uses moderate memory
GRAFANA_MEMORY_LIMIT=512m
LOKI_MEMORY_LIMIT=512m
PROMTAIL_MEMORY_LIMIT=256m

# Environment Labels
ENVIRONMENT=dev
TEAM=platform
COMPOSE_PROJECT_NAME=grafana-loki