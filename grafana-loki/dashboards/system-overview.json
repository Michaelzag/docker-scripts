{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": true,
  "panels": [
    {
      "title": "System Health Overview",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 6, "w": 4, "x": 0, "y": 1 },
      "id": 1,
      "title": "Active Services",
      "type": "stat",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 1 }, { "color": "green", "value": 4 }] },
          "unit": "short"
        }
      },
      "options": { "colorMode": "background", "justifyMode": "center", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [{ "expr": "count(count by (container_name) (rate({environment=~\"$environment\", container_group=~\"$container_group\", service_name=~\"$service_name\"} [5m])))", "refId": "A" }]
    },
    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 6, "w": 4, "x": 4, "y": 1 },
      "id": 2,
      "title": "System Error Rate",
      "type": "stat",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 10 }] }
        }
      },
      "options": { "colorMode": "background", "justifyMode": "center", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [{ "expr": "sum(rate({environment=~\"$environment\", container_group=~\"$container_group\", service_name=~\"$service_name\"} |~ \"(?i)(error|exception)\" [5m]))", "refId": "A" }]
    },
    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 1 },
      "id": 3,
      "title": "Overall Activity Trend",
      "type": "timeseries",
      "fieldConfig": { "defaults": { "color": { "mode": "palette-classic" } } },
      "targets": [{ "expr": "sum(rate({environment=~\"$environment\", container_group=~\"$container_group\"} [1m]))", "refId": "A" }]
    },
    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 1 },
      "id": 4,
      "title": "Service Health Matrix",
      "type": "heatmap",
      "fieldConfig": { "defaults": { "color": { "mode": "spectrum" } } },
      "targets": [{ "expr": "sum by (container_name) (rate({environment=~\"$environment\", container_group=~\"$container_group\"} [5m]))", "refId": "A" }]
    },
    {
      "title": "Service Performance Analysis",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 7 },
      "collapsed": false
    },
    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "id": 5,
      "title": "Activity by Service Type",
      "type": "timeseries",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "bars", "fillOpacity": 80 }
        }
      },
      "options": { "legend": { "displayMode": "table", "placement": "right" } },
      "targets": [{ "expr": "sum by (database_type) (rate({environment=~\"$environment\"} [5m]))", "refId": "A" }]
    },
    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "id": 6,
      "title": "Error Distribution by Service",
      "type": "piechart",
      "fieldConfig": { "defaults": { "color": { "mode": "palette-classic" } } },
      "options": { "legend": { "displayMode": "table", "placement": "right" }, "pieType": "pie" },
      "targets": [{ "expr": "sum by (service_name) (rate({environment=~\"$environment\"} |~ \"(?i)error\" [15m]))", "refId": "A" }]
    },
    {
      "title": "Critical Issues & Alerts",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 16 },
      "collapsed": false
    },
    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 17 },
      "id": 7,
      "title": "Critical Errors & Warnings",
      "type": "logs",
      "options": { "showTime": true, "sortOrder": "Descending", "wrapLogMessage": true, "showLabels": true },
      "targets": [{ "expr": "{environment=~\"$environment\", container_group=~\"$container_group\", service_name=~\"$service_name\"} |~ \"(?i)(error|critical|fatal|exception)\"", "refId": "A" }]
    },
    {
      "title": "Performance Insights",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
      "collapsed": false
    },
    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 28 },
      "id": 8,
      "title": "Top 5 Noisiest Services",
      "type": "bargauge",
      "fieldConfig": { "defaults": { "color": { "mode": "palette-classic" } } },
      "options": { "orientation": "horizontal", "displayMode": "gradient" },
      "targets": [{ "expr": "topk(5, sum by (service_name) (rate({environment=~\"$environment\", container_group=~\"$container_group\"} [15m])))", "refId": "A", "legendFormat": "{{service_name}}" }]
    },
    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 28 },
      "id": 9,
      "title": "Error Rate Correlation",
      "type": "timeseries",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 20 }
        }
      },
      "targets": [
        { "expr": "rate({database_type=\"mysql\", environment=~\"$environment\"} |~ \"(?i)error\" [1m])", "refId": "A", "legendFormat": "MySQL Errors" },
        { "expr": "rate({database_type=\"neo4j\", environment=~\"$environment\"} |~ \"(?i)error\" [1m])", "refId": "B", "legendFormat": "Neo4j Errors" },
        { "expr": "rate({database_type=\"memgraph\", environment=~\"$environment\"} |~ \"(?i)error\" [1m])", "refId": "C", "legendFormat": "Memgraph Errors" }
      ]
    },
    {
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 28 },
      "id": 10,
      "title": "Service Availability Score",
      "type": "gauge",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "red", "value": 0 }, { "color": "yellow", "value": 80 }, { "color": "green", "value": 95 }] },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "targets": [{ "expr": "100 - (sum(rate({environment=~\"$environment\", container_group=~\"$container_group\"} |~ \"(?i)error\" [5m])) / sum(rate({environment=~\"$environment\", container_group=~\"$container_group\"} [5m])) * 100)", "refId": "A" }]
    }
  ],
  "refresh": "15s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["overview", "system", "monitoring"],
  "templating": {
    "list": [
      {
        "name": "environment",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values({monitoring_enabled=\"true\"}, environment)",
        "includeAll": true,
        "multi": true,
        "refresh": 2
      },
      {
        "name": "container_group",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values({monitoring_enabled=\"true\", environment=~\"$environment\"}, container_group)",
        "includeAll": true,
        "multi": true,
        "refresh": 2
      },
      {
        "name": "service_name",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values({monitoring_enabled=\"true\", environment=~\"$environment\", container_group=~\"$container_group\"}, service_name)",
        "includeAll": true,
        "multi": true,
        "refresh": 2
      },
      {
        "name": "container_name",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values({monitoring_enabled=\"true\", environment=~\"$environment\", service_name=~\"$service_name\"}, container_name)",
        "includeAll": true,
        "multi": true,
        "refresh": 2
      }
    ]
  },
